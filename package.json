{
  "name": "MELODIES",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack --config webpack.preload.config.js && cross-env NODE_ENV=development electron .",
    "build:css": "tailwindcss -i ./style.css -o ./public/output.css --watch",
    "build:react": "webpack --mode development --watch",
    "build:react-prod": "webpack --mode production",
    "build:preload": "webpack --config webpack.preload.config.js",
    "dev": "concurrently \"npm run build:css\" \"npm run build:react\"",
    "build": "npm run build:preload && npm run build:react-prod && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.melodies.karaoke",
    "productName": "Melodies Karaoke",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "./icon.ico"
    },
    "extraFiles": [
      {
        "from": "./src/dist/preload.bundle.js",
        "to": "preload.bundle.js"
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.27.6",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.10",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "lowdb": "^7.0.1",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1",
    "sql.js": "^1.13.0"
  }
}
